[
  {
    "title": "Bee Node Setting",
    "uri": "/sensor_setting",
    "menu": true,
    "element": 
    [
      {
        "name": "style",
        "type": "ACStyle",
        "value": "label+input,label+select{position:sticky;left:120px;width:230px!important;box-sizing:border-box;}"
      },
      {
        "name": "header",
        "type": "ACText",
        "value": "<h2>Bee Node Configuration</h2>",
        "style": "text-align:center;color:#2f4f4f;padding:10px;"
      },
      {
        "name": "caption",
        "type": "ACText",
        "value": "Setting for bee node and connection sensors",
        "style": "font-family:serif;color:#4682b4;"
      },
      {
        "name": "beenodename",
        "type": "ACInput",
        "label": "Bee Node Name",
        "placeholder": "Bee Node XXX"
      },
      {
        "name": "hivename",
        "type": "ACInput",
        "label": "Hive Name"
      },
      {
        "name": "newline",
        "type": "ACElement",
        "value": "<hr>"
      },
	    {
        "name": "newline1",
        "type": "ACElement",
        "value": "<hr>"
      },
	    {
        "name": "useWeigthSensor",
        "type": "ACCheckbox",
        "value": "unique",
        "label": "Use HX711",
        "checked": false
      },
	    {
        "name": "newline2",
        "type": "ACElement",
        "value": "<hr>"
      },
	  	  {
        "name": "useDeepSleep",
        "type": "ACCheckbox",
        "value": "unique",
        "label": "Use Deep Sleep",
        "checked": false
      },
      {
        "name": "deepSleepTime",
        "type": "ACInput",
        "label": "Deep Sleep Time (Sec)",
        "pattern": "^[0-9]$"
      },
	    {
        "name": "newline3",
        "type": "ACElement",
        "value": "<hr>"
      },
 	    {
        "name": "useVibrationSensor",
        "type": "ACCheckbox",
        "value": "unique",
        "label": "Use vibration sensor (ADXL335) ",
        "checked": false
      },
      {
        "name": "acc_datarate",
        "type": "ACRadio",
        "value": [
          "3200",
          "1600",
          "800",
          "400",
          "200",
          "100",
          "50",
          "25",
          "12.50",
          "6.25",
          "3.13",
          "1.56",
          "0.78",
          "0.39",
          "0.20",
          "0.10"
        ],
        "label": "Data Rate (Hz)",
        "arrange": "vertical"
      },
      {
        "name": "acc_range",
        "type": "ACRadio",
        "value": [
          "16",
          " 8",
          " 4",
          " 2"
        ],
        "label": "Range (g)",
        "arrange": "vertical"
      },
      {
        "name": "acc_usefullres",
        "type": "ACCheckbox",
        "value": "unique",
        "label": "Use full resolution",
        "checked": false
      },
	    {
        "name": "newline4",
        "type": "ACElement",
        "value": "<hr>"
      },
      {
        "name": "useTemperatureSensor",
        "type": "ACCheckbox",
        "value": "unique",
        "label": "Use temperature sensor (DS)",
        "checked": false
      },
      {
        "name": "newline5",
        "type": "ACElement",
        "value": "<hr>"
      },
      {
        "name": "useRTCSensor",
        "type": "ACCheckbox",
        "value": "unique",
        "label": "Use real time clock",
        "checked": false
      },
	    {
        "name": "newline6",
        "type": "ACElement",
        "value": "<hr>"
      },
      {
        "name": "useMQTT",
        "type": "ACCheckbox",
        "value": "unique",
        "label": "Use mqtt server",
        "checked": false
      },
      {
        "name": "mqtt_server",
        "type": "ACInput",
        "label": "Server",
        "pattern": "^(([a-zA-Z0-9]|[a-zA-Z0-9][a-zA-Z0-9\\-]*[a-zA-Z0-9])\\.)*([A-Za-z0-9]|[A-Za-z0-9][A-Za-z0-9\\-]*[A-Za-z0-9])$",
        "placeholder": "MQTT broker server (IP)"
      },
      {
        "name": "mqtt_topic",
        "type": "ACInput",
        "label": "Topic"
      },
      {
        "name": "mqtt_SSID",
        "type": "ACInput",
        "label": "SSID"
      },
      {
        "name": "mqtt_wifi_pwd",
        "type": "ACInput",
        "label": "Wifi Password"
      },
      {
        "name": "mqttusername",
        "type": "ACInput",
        "label": "MQTT Username (leave blank for anonym)"
      },
      {
        "name": "mqttpassword",
        "type": "ACInput",
        "label": "MQTT Password (leave blank for anonym)"
      },
      {
        "name": "newline11",
        "type": "ACElement",
        "value": "<hr>"
      },
      {
        "name": "sdaio",
        "type": "ACInput",
        "label": "SDA IO"
      },
      {
        "name": "sdlio",
        "type": "ACInput",
        "label": "SDL IO"
      },
      {
        "name": "newline12",
        "type": "ACElement",
        "value": "<hr>"
      },
      {
        "name": "useSDLogging",
        "type": "ACCheckbox",
        "value": "unique",
        "label": "Use SD Log",
        "checked": false
      },
      {
        "name": "newline13",
        "type": "ACElement",
        "value": "<hr>"
      },      {
        "name": "newline14",
        "type": "ACElement",
        "value": "<hr>"
      },
      {
        "name": "save",
        "type": "ACSubmit",
        "value": "Save&amp;Start",
        "uri": "/sensor_save"
      },
      {
        "name": "discard",
        "type": "ACSubmit",
        "value": "Discard",
        "uri": "/"
      }
    ]
  },
