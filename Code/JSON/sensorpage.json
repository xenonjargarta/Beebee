[
  {
    "title": "Bee Node Setting",
    "uri": "/sensor_setting",
    "menu": true,
    "element": 
    [
      {
        "name": "style",
        "type": "ACStyle",
        "value": "label+input,label+select{position:sticky;left:120px;width:230px!important;box-sizing:border-box;}"
      },
      {
        "name": "header",
        "type": "ACText",
        "value": "<h2>Bee Node Configuration</h2>",
        "style": "text-align:center;color:#2f4f4f;padding:10px;"
      },
      {
        "name": "caption",
        "type": "ACText",
        "value": "Setting for bee node and connection sensors",
        "style": "font-family:serif;color:#4682b4;"
      },
      {
        "name": "beenodename",
        "type": "ACInput",
        "label": "Bee Node Name",
        "placeholder": "Bee Node XXX"
      },
      {
        "name": "hivename",
        "type": "ACInput",
        "label": "Hive Name"
      },
      {
        "name": "newline",
        "type": "ACElement",
        "value": "<hr>"
      },
	  {
        "name": "newline1",
        "type": "ACElement",
        "value": "<hr>"
      },
	  {
        "name": "useWeigthSensor",
        "type": "ACCheckbox",
        "value": "unique",
        "label": "Use HX711",
        "checked": false
      },
	    {
        "name": "newline2",
        "type": "ACElement",
        "value": "<hr>"
      },
	  	  {
        "name": "useDeepSleep",
        "type": "ACCheckbox",
        "value": "unique",
        "label": "Use Deep Sleep",
        "checked": false
      },
      {
        "name": "deepSleepTime",
        "type": "ACInput",
        "label": "Deep Sleep Time (Sec)",
        "pattern": "^[0-9]$"
      },
	  {
        "name": "newline3",
        "type": "ACElement",
        "value": "<hr>"
      },
 	  {
        "name": "useVibrationSensor",
        "type": "ACCheckbox",
        "value": "unique",
        "label": "Use vibration sensor (ADXL335) ",
        "checked": false
      },
	  {
        "name": "newline4",
        "type": "ACElement",
        "value": "<hr>"
      },
      {
        "name": "useTemperatureSensor",
        "type": "ACCheckbox",
        "value": "unique",
        "label": "Use temperature sensor (DS)",
        "checked": false
      },
      {
        "name": "newline5",
        "type": "ACElement",
        "value": "<hr>"
      },
      {
        "name": "useRTCSensor",
        "type": "ACCheckbox",
        "value": "unique",
        "label": "Use real time clock",
        "checked": false
      },
	  {
        "name": "newline6",
        "type": "ACElement",
        "value": "<hr>"
      },
      {
        "name": "save",
        "type": "ACSubmit",
        "value": "Save&amp;Start",
        "uri": "/sensor_save"
      },
      {
        "name": "discard",
        "type": "ACSubmit",
        "value": "Discard",
        "uri": "/"
      }
    ]
  },
  {
    "title": "SENSOR Setting",
    "uri": "/sensor_save",
    "menu": false,
    "element": [
      {
        "name": "caption",
        "type": "ACText",
        "value": "<h4>You need to reboot the device. Parameters saved as:</h4>",
        "style": "text-align:center;color:#2f4f4f;padding:10px;"
      },
      {
        "name": "beenodename",
        "type": "ACText",
        "format": "Server: %s",
        "posterior": "br"
      },
      {
        "name": "hivename",
        "type": "ACText",
        "format": "Channel ID: %s",
        "posterior": "br"
      },
      {
        "name": "useDeepSleep",
        "type": "ACText",
        "format": "Use deep sleep: %s",
        "posterior": "br"
      },
      {
        "name": "deepSleepTime",
        "type": "ACText",
        "format": "Deep sleep time: %s",
        "posterior": "br"
      },
      {
        "name": "useTemperatureSensor",
        "type": "ACText",
        "format": "Use temperature sensor: %s",
        "posterior": "br"
      },
      {
        "name": "useVibrationSensor",
        "type": "ACText",
        "format": "Use vibration sensor: %s",
        "posterior": "br"
      },
      {
        "name": "useRTCSensor",
        "type": "ACText",
        "format": "Use real time clock: %s",
        "posterior": "br"
      }
    ]
  }
]