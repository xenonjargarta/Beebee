        "value": "unique",
        "label": "Use HX711",
        "checked": false
      },
      {
        "name": "period1",
        "type": "ACRadio",
        "value": [
          "30 sec.",
          "60 sec.",
          "180 sec."
        ],
        "label": "Update period",
        "arrange": "vertical"
      },
	  {
        "name": "newline4",
        "type": "ACElement",
        "value": "<hr>"
      },
