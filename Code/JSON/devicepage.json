[
  {
    "title": "Device Settings",
    "uri": "/device_settings",
    "menu": true,
    "element": 
    [
      {
        "name": "style",
        "type": "ACStyle",
        "value": "label+input,label+select{position:sticky;left:120px;width:230px!important;box-sizing:border-box;}"
      },
      {
        "name": "header",
        "type": "ACText",
        "value": "<h2>Basic Bee Node Configuration</h2>",
        "style": "text-align:center;color:#2f4f4f;padding:10px;"
      },
      {
        "name": "caption",
        "type": "ACText",
        "value": "Setup for basic device properties",
        "style": "font-family:serif;color:#4682b4;"
      },
      {
        "name": "save",
        "type": "ACSubmit",
        "value": "Save config",
        "uri": "/device_save"
      },
      {
        "name": "discard",
        "type": "ACSubmit",
        "value": "Discard",
        "uri": "/_ac"
      },
      {
        "name": "newline1",
        "type": "ACElement",
        "value": "<hr>"
      },
      {
        "name": "caption1",
        "type": "ACText",
        "value": "Set name & ID for bee node sensor",
        "style": "font-family:serif;color:#4682b4;"
      },
      {
        "name": "beenodename",
        "type": "ACInput",
        "label": "Bee Node Name",
        "placeholder": "Bee Node XXX"
      },
      {
        "name": "hiveid",
        "type": "ACInput",
        "label": "Hive ID",
        "placeholder": "001"
      },
      {
        "name": "newline2",
        "type": "ACElement",
        "value": "<hr>"
      },
      {
        "name": "caption2",
        "type": "ACText",
        "value": "Setup power management",
        "style": "font-family:serif;color:#4682b4;"
      },
	  	{
        "name": "useDeepSleep",
        "type": "ACCheckbox",
        "value": "unique",
        "label": "Use Deep Sleep",
        "checked": false
      },
      {
        "name": "deepSleepTime",
        "type": "ACInput",
        "label": "Time (Sec)",
        "pattern": "^[0-9]$"
      },
      {
        "name": "usePowerOff",
        "type": "ACCheckbox",
        "value": "unique",
        "label": "Use power off",
        "checked": false
      },
      {
        "name": "POWEROFFPIN",
        "type": "ACInput",
        "label": "PowerOff PIN"
      },
      {
        "name": "newline3",
        "type": "ACElement",
        "value": "<hr>"
      },
      {
        "name": "caption3",
        "type": "ACText",
        "value": "Set network properties",
        "style": "font-family:serif;color:#4682b4;"
      },
      {
        "name": "esphostname",
        "type": "ACInput",
        "value": "",
        "label": "ESP host name",
        "pattern": "^([a-zA-Z0-9]([a-zA-Z0-9-])*[a-zA-Z0-9]){1,24}$"
      },
      {
        "name": "newline4",
        "type": "ACElement",
        "value": "<hr>"
      },
      {
        "name": "caption4",
        "type": "ACText",
        "value": "Setup IO ports",
