[
  {
    "title": "Message Settings",
    "uri": "/message_settings",
    "menu": true,
    "element": [
      {
        "name": "style",
        "type": "ACStyle",
        "value": "label+input,label+select{position:sticky;left:120px;width:230px!important;box-sizing:border-box;}"
      },
      {
        "name": "header",
        "type": "ACText",
        "value": "<h2>Message and logging settings</h2>",
        "style": "text-align:center;color:#2f4f4f;padding:10px;"
      },
      {
        "name": "caption1",
        "type": "ACText",
        "value": "Setup message & logging properties",
        "style": "font-family:serif;color:#4682b4;"
      },
      {
        "name": "save",
        "type": "ACSubmit",
        "value": "Save",
        "uri": "/mqtt_save"
      },
      {
        "name": "discard",
        "type": "ACSubmit",
        "value": "Discard",
        "uri": "/"
      },
      {
        "name": "newline",
        "type": "ACElement",
        "value": "<hr style='width:100%;height:30px'>"
      },
      {
        "name": "caption2",
        "type": "ACText",
        "value": "Set MQTT properties",
        "style": "font-family:serif;color:#4682b4;"
      },
      {
        "name": "useMQTT",
        "type": "ACCheckbox",
        "value": "unique",
        "label": "Use mqtt server",
        "checked": false
      },
      {
        "name": "mqtt_server",
        "type": "ACInput",
        "label": "Server",
        "pattern": "^(([a-zA-Z0-9]|[a-zA-Z0-9][a-zA-Z0-9\\-]*[a-zA-Z0-9])\\.)*([A-Za-z0-9]|[A-Za-z0-9][A-Za-z0-9\\-]*[A-Za-z0-9])$",
        "placeholder": "MQTT broker server (IP)"
      },
      {
        "name": "mqtt_port",
        "type": "ACInput",
        "label": "Port",
        "placeholder": "MQTT broker server (IP)"
      },
      {
        "name": "mqtt_topic",
        "type": "ACInput",
        "label": "Topic"
      },
      {
        "name": "mqtt_messagedelay",
        "type": "ACInput",
        "label": "Message Delay"
      },
      {
        "name": "mqtt_SSID",
        "type": "ACInput",
        "label": "SSID"
      },
      {
        "name": "mqtt_wifi_pwd",
        "type": "ACInput",
        "label": "Wifi Password"
      },
      {
        "name": "mqttusername",
        "type": "ACInput",
        "label": "MQTT Username (leave blank for anonym)"
      },
      {
        "name": "mqttpassword",
        "type": "ACInput",
        "label": "MQTT Password (leave blank for anonym)"
      },
      {
        "name": "userkey",
        "type": "ACInput",
        "label": "User Key"
      },
      {
        "name": "apikey",
        "type": "ACInput",
        "label": "API Key"
      },
      {
        "name": "newline3",
        "type": "ACElement",
        "value": "<hr>"
      },
      {
        "name": "caption3",
        "type": "ACText",
        "value": "Set SD card properties",
        "style": "font-family:serif;color:#4682b4;"
      },
      {
        "name": "useSDLogging",
        "type": "ACCheckbox",
        "value": "unique",
        "label": "Use SD Log",
        "checked": false
      },
      {
        "name": "sd_logfilepath",
        "type": "ACInput",
        "label": "Log file path",
        "placeholder": "i.e. /value.txt"
      }
    ]
  },
  {
    "title": "Message Settings",
    "uri": "/message_save",
    "menu": false,
    "element": [
      {
        "name": "caption",
        "type": "ACText",
        "value": "<h4>Parameters saved as:</h4>",
        "style": "text-align:center;color:#2f4f4f;padding:10px;"
      },
      {
        "name": "mqttserver",
        "type": "ACText",
        "format": "Server: %s",
        "posterior": "br"
      },
      {
        "name": "channelid",
        "type": "ACText",
        "format": "Channel ID: %s",
        "posterior": "br"
      },
      {
        "name": "userkey",
        "type": "ACText",
        "format": "User Key: %s",
        "posterior": "br"
      },
      {
        "name": "apikey",
        "type": "ACText",
        "format": "API Key: %s",
        "posterior": "br"
      },
      {
        "name": "period",
        "type": "ACText",
        "format": "Update period: %s sec.",
        "posterior": "br"
      },
      {
        "name": "clear",
        "type": "ACSubmit",
        "value": "Clear channel",
        "uri": "/mqtt_clear"
      }
    ]
  }
]